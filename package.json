{
    "name": "msbuild-project-tools",
    "displayName": "MSBuild project tools",
    "description": "Tools for working with MSBuild project files (such as auto-complete for package Ids / versions).",
    "version": "0.1.10",
    "publisher": "tintoy",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/tintoy/msbuild-project-tools-vscode.git"
    },
    "icon": "images/icon.png",
    "engines": {
        "vscode": "^1.14.0"
    },
    "categories": [
        "Languages",
        "Other"
    ],
    "keywords": [
        "msbuild",
        "dotnet",
        "nuget",
        "packagereference"
    ],
    "activationEvents": [
        "workspaceContains:NuGet.config",
        "onLanguage:msbuild",
        "onLanguage:xml"
    ],
    "main": "./out/src/extension/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "MSBuild project file tools",
            "properties": {
                "msbuildProjectFileTools.languageService.disableHover": {
                    "type": "boolean",
                    "default": false,
                    "description": "Disable tooltips when hovering on XML in MSBuild project files."
                },
                "msbuildProjectFileTools.languageService.disableNuGetPreFetch": {
                    "type": "boolean",
                    "default": false,
                    "description": "Don't automatically initialise the NuGet API client when opening a project (this is done to make the first PackageReference completion faster)."
                },
                "msbuildProjectFileTools.languageService.enable": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable the MSBuild language service (if false, then the simple completion provider will be used instead)."
                },
                "msbuildProjectFileTools.languageService.logLevel": {
                    "type": "string",
                    "enum": [
                        "Verbose",
                        "Information",
                        "Warning",
                        "Error"
                    ],
                    "default": "Information",
                    "description": "The logging level for the MSBuild language service."
                },
                "msbuildProjectFileTools.languageService.traceLevel": {
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "messages",
                    "description": "Trace the communication between VSCode and the MSBuild language service."
                }
            }
        },
        "snippets": [
            {
                "language": "msbuild",
                "path": "./snippets/msbuild-project.json"
            },
            {
                "language": "xml",
                "path": "./snippets/msbuild-project.json"
            }            
        ],
        "grammars": [
            {
                "scopeName": "text.xml.msbuild.expression",
                "injectTo": [
                    "text.xml.msbuild"
                ],
                "path": "./syntaxes/msbuild.expression.json"
            },
            {
                "language": "msbuild",
                "scopeName": "text.xml.msbuild",
                "path": "./syntaxes/msbuild.json"
            }
        ],
        "languages": [
            {
                "id": "msbuild",
                "aliases": [
                    "MSBuild"
                ],
                "extensions": [
                    "csproj",
                    "props",
                    "targets"
                ],
                "configuration": "./language-configuration.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/chai": "^4.0.2",
        "@types/mocha": "^2.2.32",
        "@types/mz": "0.0.31",
        "@types/node": "^6.0.40",
        "@types/semver": "^5.3.34",
        "@types/which": "^1.0.28",
        "@types/xmldom": "^0.1.29",
        "chai": "^4.1.1",
        "mocha": "^2.3.3",
        "tslint": "^5.5.0",
        "typescript": "^2.0.3",
        "vscode": "^1.0.0"
    },
    "dependencies": {
        "axios": "^0.16.2",
        "mz": "^2.6.0",
        "rxjs": "^5.4.2",
        "semver": "^5.4.1",
        "vscode-languageclient": "^3.3.0",
        "which": "^1.3.0",
        "xmldom": "^0.1.27"
    }
}
