{
    "name": "msbuild-project-tools",
    "displayName": "MSBuild project tools",
    "description": "Tools for working with MSBuild project files (such as auto-complete for package Ids / versions).",
    "version": "0.1.0-alpha1",
    "publisher": "tintoy",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/tintoy/msbuild-project-tools-vscode.git"
    },
    "icon": "images/icon.png",
    "engines": {
        "vscode": "^1.14.0"
    },
    "categories": [
        "Languages",
        "Other"
    ],
    "keywords": [
        "msbuild",
        "dotnet",
        "nuget",
        "packagereference"
    ],
    "activationEvents": [
        "workspaceContains:NuGet.config",
        "onLanguage:xml"
    ],
    "main": "./out/src/extension/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "MSBuild project file tools",
            "properties": {
                "msbuildProjectFileTools.trace.server": {
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "messages",
                    "description": "Traces the communication between VSCode and the languageServerExample service."
                }
            }
        },
        "snippets": [
            {
                "language": "xml",
                "path": "./snippets/msbuild-project.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/chai": "^4.0.2",
        "@types/mocha": "^2.2.32",
        "@types/mz": "0.0.31",
        "@types/node": "^6.0.40",
        "@types/which": "^1.0.28",
        "@types/xmldom": "^0.1.29",
        "chai": "^4.1.1",
        "mocha": "^2.3.3",
        "tslint": "^5.5.0",
        "typescript": "^2.0.3",
        "vscode": "^1.0.0"
    },
    "dependencies": {
        "axios": "^0.16.2",
        "mz": "^2.6.0",
        "rxjs": "^5.4.2",
        "vscode-languageclient": "^3.3.0",
        "which": "^1.3.0",
        "xmldom": "^0.1.27"
    }
}
