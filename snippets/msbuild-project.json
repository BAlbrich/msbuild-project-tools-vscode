{
	"Load Metapackage for ASP.NET Core": {
		"prefix": "msbuild-metapackage-aspnetcore",
		"body": [
			"<ItemGroup>",
			"    <PackageReference Include=\"Microsoft.AspNetCore.All\" Version=\"${1:2.0.5}\" />",
			"</ItemGroup>",
			""
		],
		"description": "Load Metapackage for ASP.NET Core"
	},
	"Microsoft.DotNet.Watcher.Tools": {
		"prefix": "msbuild-dotnet-watcher-tools",
		"body": [
			"<ItemGroup>",
			"    <DotNetCliToolReference Include=\"Microsoft.DotNet.Watcher.Tools\" Version=\"${1:2.0.0}\" />",
			"</ItemGroup>",
			""
		],
		"description": "Load DotNetCliToolReference for Microsoft.DotNet.Watcher.Tools"
	},
	"Set to IsTransformWebConfigDisabled": {
		"prefix": "msbuild-iis-deployment",
		"body": [
			"<PropertyGroup>",
			"    <IsTransformWebConfigDisabled>true</IsTransformWebConfigDisabled>",
			"</PropertyGroup>",
			""
		],
		"description": "Enable IIS Deployment Settings"
	},
	"NuGet Properties": {
		"prefix": "msbuild-nuget-properties",
		"body": [
			"<PropertyGroup>",
			"    <Company>${1:MyCompany Inc}</Company>",
			"    <Authors>${2:Your Name}</Authors>",
			"    <Version>${3:1.0.0}</Version>",
			"    <Description>${4:Description}</Description>",
			"    <IncludeSymbols>${5:true}</IncludeSymbols>",
			"    <IncludeSource>${6:true}</IncludeSource>",
			"    <GeneratePackageOnBuild>${7:false}</GeneratePackageOnBuild>",
			"</PropertyGroup>",
			""
		],
		"description": "Enable IIS Deployment Settings"
	},
	"Multi-Targeting PropertyGroup in .NET Standard": {
		"prefix": "msbuild-multi-targeting-propertygroup",
		"body": [
			"<PropertyGroup Condition=\"'$(TargetFramework)' == '${1|net471,net47,net462,net461,net461,net46,net452,net451,net45,net403,net40,net35,net20,net11,netcoreapp2.0,netcoreapp1.1,netcoreapp1.0,netstandard2.0,netstandard1.6,netstandard1.5,netstandard1.4,netstandard1.3,netstandard1.2,netstandard1.1,netstandard1.0|}'\">",
			"    $0",
			"</PropertyGroup>",
			""
		],
		"description": "Multi-Targeting PropertyGroup in .NET Standard"
	},
	"Multi-Targeting ItemGroup in .NET Standard": {
		"prefix": "msbuild-multi-targeting-itemgroup",
		"body": [
			"<ItemGroup Condition=\"'$(TargetFramework)' == '${1|net471,net47,net462,net461,net461,net46,net452,net451,net45,net403,net40,net35,net20,net11,netcoreapp2.0,netcoreapp1.1,netcoreapp1.0,netstandard2.0,netstandard1.6,netstandard1.5,netstandard1.4,netstandard1.3,netstandard1.2,netstandard1.1,netstandard1.0|}'\">",
			"    $0",
			"</ItemGroup>",
			""
		],
		"description": "Multi-Targeting ItemGroup in .NET Standard"
	}
}
